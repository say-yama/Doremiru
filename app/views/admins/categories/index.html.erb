<div class="row">
  <h2>カテゴリの追加</h2>
  <div class="col-md-8 mx-auto mt-3">
    <div class="row">
<!--カテゴリーの入力フォーム-->
      <div class="col-md-6">
       <%= form_with model: [:admins, @category] do |f| %>
          <div class="from_input">
            <%= f.label :カテゴリー名, class: "h4" %><br>
            <%= f.text_field :name %>
          </div>
          <div class="form_action"><br>
            <%= f.submit "登録する", class: "btn btn-primary" %>
          </div>
       <% end %>
      </div>
<!--登録したカテゴリーの表示-->
      <div class="col-md-6">
       <h4 class="mb-4">カテゴリー 一覧</h4>
       <% @categories.each do |category| %>
       <div class="d-flex m-2">
          <h4 class="col-md-6 border-bottom"><%= category.name %></h4>
          <%= link_to "削除", "/admins/categories/#{category.id}", class: "btn btn-danger p-1", method: :delete, "data-confirm" => "本当に削除しますか？"  %>
       </div>
       <% end %>
      </div>

    </div>
  </div>
</div>