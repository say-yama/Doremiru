<h2 class="page-title mb-3">通報詳細</h2>

<table class="table">
    <tbody>
      <tr>
        <td class="h5">通報ID</td>
        <td><%= @report.id %></td>
      </tr>
      <tr>
        <td class="h5">会員名</td>
        <td><%= @report.reported.name %></td>
      </tr>
      <tr>
        <td class="h5">理由</td>
        <td><%= @report.reason %></td>
      </tr>
      <tr>
        <td class="h5">URL等</td>
        <td><%= @report.url %></td>
      </tr>
      <tr>
        <td class="h5">通報者</td>
        <td><%= @report.reporter.name %></td>
      </tr>
      <tr>
        <td class="h5">対応ステータス</td>
        <td class="d-flex">
          <div class="mr-5"><%= @report.status_i18n %></div>
          <%= form_with model:@report, url:admins_report_path(@report), method: :patch, local: true do |f| %>
            <%= f.select :status, Report.statuses.keys.map { |k| [t("enums.report.status.#{k}"), k]} %>
            <%= f.submit "更新", class: "btn btn-primary ml-3 p-1" %>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
</div>
