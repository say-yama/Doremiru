<h1 class="border">会員一覧</h1>
<div class="col-md-8 mx-auto">

  <table class="table table-hover">
    <thead class="h4">
      <tr>
        <th>作成日</th>
        <th>アカウント名</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= l user.created_at %>
        </td>
        <td class="h5">
          <%= link_to admins_user_path(user.id), class: "text-dark text-decoration-none" do %>
            <%= user.name %>
          <% end %>
        </td>
        <td>
          <%= user.status_i18n %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>