
  <% @posts.each do|post| %>
  <!--小説カテゴリーのみ表示-->
    <% if post.category_id == 4 %>
  
      <div class="card-deck" style="width:18rem">
        
        <div class="card w-50 mx-auto mt-4 shadow-lg">
          <div class="card-body">
            <div class="row">
              <div class="col-3">
                <%= image_tag post.user.get_icon, class: "img-thumbnail rounded-circle border"; %><br>
              </div>
    
              <div class="col-8 ml-5">
                <i class="fas fa-user"></i> <%= post.user.name %>
              </div>
            </div>
             <p class="text-right"><%= post.category_id %></p>
             <p class="text-right"><%= post.gunre_id %></p>
             <h2 class="card-title border-bottom">
               <%= post.post_title %>
             </h2>
             <h4 class="card-title border p-1">
               <%= post.title %>
             </h4>
             <p class="card-text">
               <%= post.post_body %>
             </p>
              <span><%#= link_to "#{@post.post_comments.count} コメント", post_image_path(@post.id), class: "text-dark" %></span>
          </div>
        </div>
        
      </div>
    <% end %>
  <% end %>