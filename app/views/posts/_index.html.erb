<!--Rank-->
<div class="col-md-12">
  <div class = "row mt-3">
    <div class="col-md-5 mx-auto">
      <table class="table border bg-white">
        <h2 class=" bg-white">
          <span class="crown">
            <i class="fa-solid fa-crown"></i>
          </span>
          総合Rank
        </h2>
        <thead>
          <tr class="text-center" style="background:#FFBBFF;">
            <th>Rank</th>
            <th>作品</th>
            <th>オススメ！</th>
          </tr>
        </thead>
        <tbody>
          <% @ranks.each.with_index do |rank, i| %>
            <tr class="text-center">
              <td><strong><%= i + 1 %></strong></td>
              <td><%= link_to image_tag(rank.image_url), rank.url %></td>
              <td>
                <span class="hidden font-weight-bold"><%= rank.title %></span>
                <%= rank.author %><br>
                <br>
                <span class="hidden2"><%= rank.item_caption %></span>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
<!--カテゴリー別Rank-->
    <div class="col-md-5 mx-auto">
