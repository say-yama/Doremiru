<div class="row">
  <div class="col-md-12 d-flex flex-wrap">
      <% @posts.each do|post| %>
      <!--映画カテゴリーのみ表示-->
        <% if post.category_id == 3 %>
          <div class="card-deck col-md-3 mt-5">
            <%= link_to post_path(post.id), class: "text-decoration-none" do %>
              <div class="card shadow-lg">
                <div class="card-body text-dark">
                  <div class="row">
                    <div class="col-5">
                      <%= image_tag post.user.get_icon, class: "img-thumbnail rounded-circle border"; %><br>
                    </div>
      
                    <div class="col-7 ml-6">
                      <i class="fas fa-user"></i> <%= post.user.name %>
                    </div>
                  </div>
                   <p class="text-right"><%= post.category.name %></p>
                   <p class="text-right"><%= post.genre.name %></p>
                   <h2 class="card-title border-bottom">
                     <%= post.post_title %>
                   </h2>
                   <h4 class="card-title border p-1">
                     <%= post.title %>
                   </h4>
                   <p class="card-text">
                     <%= post.post_body %>
                   </p>
                   <p class="card-text m-0">
                     <%= l post.created_at, format: :short %>
                   </p>
                    <span><%#= link_to "#{@post.post_comments.count} コメント", post_image_path(@post.id), class: "text-dark" %></span>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      <% end %>
  </div>
</div>