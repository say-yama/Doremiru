<div class="row">
  <h1>投稿作品検索</h1>
  <div class="col-md-8 mx-auto">
      <%= form_with url: search_path, local: true, method: :get do |f| %>
        <div class="form-input mt-2">
          <%= f.label :title, "作品名", class: "h4" %>
          <%= f.text_field :search, class: "form-control" %>
        </div>
        <div class="form_input mt-2">
          <%= f.label :category, "カテゴリー", class: "h4" %><br>
          <%= f.collection_radio_buttons :category, Post.categories_i18n, :first, :last%>
        </div>
        <div class="form_input mt-2">
          <%= f.label :genre, "ジャンル", class: "h4" %><br>
          <%= f.collection_radio_buttons :genre, Post.genres_i18n, :first, :last %>
        </div>
        <div class="form_action row mt-4">
            <%= f.submit "検索する", class: "btn btn-primary"%>
        </div>
      <% end %>
  </div>
</div>

  <h4 class="m-4">検索結果は<%= @search_count.count %>件です</h4>
<!--検索結果投稿一覧-->
