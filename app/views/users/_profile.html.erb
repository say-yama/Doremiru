<div class="border">
<% if @user != current_user %>
  <%= link_to "ユーザーを通報", new_user_report_path(@user), class: "btn btn-danger" %>
<% end %>

    <div class="mt-3 text-center">
       <%= image_tag @user.get_icon, class: "img-thumbnail rounded-circle border" %>
    </div>
    <ul class="list-unstyled text-center">
      <li class="mt-3">
        <%= @user.name %>
      </li>
      <li class="mt-3">
      <p>自己紹介</p>
        <%= @user.profile %>
      </li>
      <li class="mt-3 border rounded">
        <%= link_to edit_user_path(current_user), class: "btn", method: :get do %>
         <i class="fa-solid fa-gear"></i>
        <% end %>
      </li>
      <li class="mt-3 border rounded">
        <%= link_to "いいね一覧",  favorites_user_path(current_user) %>
      </li>
      <li class="mt-3 border rounded">
        <%= link_to "アカウント編集", edit_user_registration_path %>
      </li>
      <li class="mt-3 border rounded">
        <%= link_to "退会",  withdrawal_user_path %>
      </li>
    </ul>

</div>