<div class="border border-2">
  <div class="text-center mt-3">
     <%= image_tag @user.get_icon, class: "img-thumbnail rounded-circle border" %>
  </div>
  <ul class="list-unstyled text-center">
    <li class="mt-3">
      <p class="h2"><%= @user.name %></p>
    </li>
    <li class="mt-3">
    <p class="h4">自己紹介<br>
      <small class="text-muted p-3"><%= @user.profile %></small>
    </p>
    </li>
    <% if @user == current_user %>
      <li>
        <%= link_to edit_user_path(current_user), class: "mt-3 btn btn-outline-dark w-75", method: :get do %>
         <i class="fa-solid fa-gear fa-lg"></i>
        <% end %>
      </li>
      <li>
        <%= link_to "いいね一覧",  favorites_user_path(current_user), class: "mt-3 btn btn-outline-dark w-75" %>
      </li>
      <li>
        <%= link_to "アカウント編集", edit_user_registration_path, class: "mt-3 btn btn-outline-dark w-75" %>
      </li>
      <li>
        <%= link_to "退会",  withdrawal_user_path(current_user), class: "mt-3 btn btn-outline-dark w-75" %>
      </li>
    <% end %>
    <div class="m-1 text-right">
      <% if @user != current_user %>
        <%= link_to new_user_report_path(@user), class: "btn btn-danger p-1", method: :get do %>
         通報<i class="fa-solid fa-ban fa-lg"></i>
        <% end %>
      <% end %>
    </div>
  </ul>


</div>