<div class="border">

    <div class="m-5 text-center rounded-circle border">
       <%= image_tag @user.get_icon, size: "130x130" %>
    </div>
    <ul class="list-unstyled text-center">
      <li class="mt-3">
        <%= @user.name %>
      </li>
      <li class="mt-3">
      <p>自己紹介</p>
        <%= @user.profile %>
      </li>
      <li class="mt-3 border rounded">
        <%= link_to edit_user_path(current_user), class: "btn", method: :get do %>
         <i class="fa-solid fa-gear"></i>
        <% end %>
      </li>
      <li class="mt-3 border rounded">
        <%= link_to "いいね一覧",  favorites_user_path(current_user) %>
      </li>
      <li class="mt-3 border rounded">
        <%= link_to "アカウント編集", edit_user_registration_path %>
      </li>
    </ul>

</div>