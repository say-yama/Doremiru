<div class="border">

    <div class="mt-2 text-center">
      <% if @user.image.attached? %>
       <%= image_tag @user.image, size: "200x200" %>
      <% else %>
       <i class="fa-solid fa-user fa-5x border p-3 rounded-circle" style="color: gray;"></i>
      <% end %>
    </div>
    <ul class="list-unstyled text-center">
      <li class="mt-3">
        <%= @user.name %>
      </li>
      <li class="mt-3">
      <p>自己紹介</p>
        <%= @user.profile %>
      </li>
      <li class="mt-3 border rounded">
        <%= link_to edit_user_path(current_user), class: "btn", method: :get do %>
         <i class="fa-solid fa-gear"></i>
        <% end %>
      </li>
      <li class="mt-3 border rounded">
        <%= link_to "いいね一覧",  favorites_user_path(current_user) %>
      </li>
      <li class="mt-3 border rounded">
        <%= link_to "アカウント編集", edit_user_registration_path %>
      </li>
    </ul>

</div>